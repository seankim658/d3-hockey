{
  "name": "d3-hockey",
  "version": "0.1.0",
  "description": "A comprehensive D3.js library for hockey data visualization with customizable rink rendering, shot charts, heatmaps, and interactive overlays",
  "type": "module",
  "main": "./dist/d3-hockey.umd.js",
  "module": "./dist/d3-hockey.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/d3-hockey.js",
      "require": "./dist/d3-hockey.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "keywords": [
    "d3",
    "hockey",
    "visualization",
    "nhl",
    "charts",
    "rink"
  ],
  "author": "Sean Kim",
  "license": "MIT",
  "peerDependencies": {
    "d3": "^7.0.0"
  },
  "dependencies": {
    "d3": "^7.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@types/d3": "^7.4.3",
    "@types/node": "^24.10.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vite": "^7.1.12",
    "vitepress": "^1.6.4"
  }
}
